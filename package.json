{
  "name": "moon",
  "private": true,
  "packageManager": "yarn@3.2.0",
  "scripts": {
    "build": "packemon build --addEngines --addExports",
    "docs": "yarn cli run website:start",
    "pack": "NODE_ENV=production yarn run packemon pack --addEngines --declaration=standard",
    "format": "prettier --write ./packages ./website",
    "type": "tsc --build --verbose",
    "cli": "./target/debug/moon --logLevel trace"
  },
  "workspaces": [
    "packages/*",
    "website"
  ],
  "engines": {
    "node": ">=12.17.0"
  },
  "devDependencies": {
    "@moonrepo/cli": "workspace:*",
    "@types/node": "^17.0.15",
    "eslint": "^8.8.0",
    "eslint-config-beemo": "^1.2.2",
    "jest": "^27.4.7",
    "jest-preset-beemo": "^1.1.5",
    "packemon": "^1.11.1",
    "prettier": "^2.5.1",
    "prettier-config-beemo": "^1.0.1",
    "tsconfig-beemo": "^1.0.1",
    "typescript": "^4.5.5"
  }
}
